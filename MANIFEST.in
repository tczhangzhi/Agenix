# Include documentation
include README.md
include LICENSE

# Include configuration files
include pytest.ini
include setup.py

# Include default skills
recursive-include agenix/default-skills *

# Include tests
recursive-include tests *.py

# Exclude compiled files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib
global-exclude .DS_Store

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune .pytest_cache
prune htmlcov
prune .mypy_cache
prune .tox
